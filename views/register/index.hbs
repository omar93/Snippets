<div class="auth">
    <form method="POST" action="/">
        <label for="username">Username:</label><br>
        <input type="text" id="username" name="username" placeholder="user" autocomplete="username" required="true"><br><br>
        <label for="password">Password:</label><br>
        <input type="password" id="password" name="password" placeholder="******" autocomplete="current-password" required="true"><br><br>
        <label for="email">Email</label><br>
        <input type="email" id="email" name="email" placeholder="email@email.com" autocomplete="email"><br><br>
        <input type="submit" value="Register">
    </form>
</div>